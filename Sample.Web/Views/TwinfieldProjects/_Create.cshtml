@using Sandbox.Web.Views.Helpers
@model Sandbox.Web.ViewModels.TwinfieldProject.CreateTwinfieldProjectModel

@using (Ajax.BeginForm("Create", "TwinfieldProjects", null, new DefaultAjaxModalOptions(), new{role = "form"})){
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Save project to Twinfield</h4>
    </div>
    <div class="modal-body">
        @Html.Partial("_ModalAlert")       

        <div class="form-group">
            @Html.LabelFor(p => p.Code)
            @Html.TextBoxFor(p => p.Code, new{@class = "form-control", @readonly="readonly"})
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Name)
            @Html.TextBoxFor(p => p.Name, new{@class = "form-control", @readonly="readonly"})
        </div>     
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Send</button>
    </div>
}

@Scripts.Render("~/bundles/modal")