@model Sample.DataAccess.Entities.Movie

@using (Ajax.BeginForm("Delete", "Movies", new{id = Model.Id}, new DefaultAjaxModalOptions(), new{role = "form"})){
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Delete movie</h4>
    </div>
    <div class="modal-body">
        @Html.Partial("_ModalAlert")
        Are you sure you want to delete this movie?
    </div>
    @Html.Partial("_ModalButtons")
}

@Scripts.Render("~/bundles/modal")

