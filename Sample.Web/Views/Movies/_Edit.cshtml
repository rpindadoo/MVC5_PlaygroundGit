@using Sample.Web.Views.Helpers
@model Sample.Web.ViewModels.Movie.EditMovieModel

@using (Ajax.BeginForm("Edit", "Movies", new{id = Model.Id}, new DefaultAjaxModalOptions(), new{role = "form"})){
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit movie</h4>
    </div>
    <div class="modal-body">
        @Html.Partial("_ModalAlert")                

        <div class="form-group">
            @Html.LabelFor(p => p.Title)            
            @Html.TextBox("Title", Model.Title , new{@class = "form-control"})
        </div>       
    </div>
    @Html.Partial("_ModalButtons")
}

@Scripts.Render("~/bundles/modal")