@using Sample.Web.Views.Helpers
@model Sample.DataAccess.Entities.MovieRate

@using (Ajax.BeginForm("Delete", "MovieRates", new{id = Model.Id}, new DefaultAjaxModalOptions(), new{role = "form"})){
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Delete movie rate</h4>
    </div>
    <div class="modal-body">
        @Html.Partial("_ModalAlert")
        Are u sure you want to delete this rate?
    </div>
    @Html.Partial("_ModalButtons")
}

@Scripts.Render("~/bundles/modal")