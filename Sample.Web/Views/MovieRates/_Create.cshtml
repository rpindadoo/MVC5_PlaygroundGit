@model Sample.Web.ViewModels.MovieRate.CreateMovieRateModel

@using (Ajax.BeginForm("Create", "MovieRates", null, new DefaultAjaxModalOptions(), new{role = "form"})){ 
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Rate a movie</h4>
    </div>
    <div class="modal-body">
        @Html.Partial("_ModalAlert")
        <div class="form-group">
            @Html.LabelFor(p => p.Rate)
            @Html.TextBoxFor(p => p.Rate, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Comments)
            @Html.TextBoxFor(p => p.Comments, new { @class = "form-control", placeholder = "Enter any comments" })
        </div>

    </div>
    @Html.HiddenFor(p => p.UserId)
    @Html.HiddenFor(p => p.MovieId)
    
    @Html.Partial("_ModalButtons")
}

@Scripts.Render("~/bundles/modal")